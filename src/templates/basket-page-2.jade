---
title: Техно-принт
---
extends layouts/_layout

block header
	// begin header
	+b.HEADER.header
		+e.bar.js-header-bar
			+e.bar-in
				+e.bar-btn
					+b.hamburger.header__hamburger
						+e.bar
				+e.bar-btn
					+icon('icon-user', 'header__bar-icon')
				+e.bar-btn
					+icon('icon-loupe', 'header__bar-icon')
				+e.bar-btn.is-open
					+e.cart-btn
						+icon('icon-cart', 'header__bar-icon')
						+e.DIV.cart-btn-total._quantity
							+e.SPAN 4 шт.
						+e.DIV.cart-btn-total
							+e.SPAN 0
							= ' '
							+icon('icon-ruble','header__cart-btn-val')

			+e.bar-content
				+b.menu
					+e.block
						+e.title
							+e.H3.title-text Меню
						+e.UL.list
							+e.item
								+e.A(href="#!").link Главная
							+e.item
								+e.A(href="#!").link Услуги фирмы
							+e.item
								+e.A(href="#!").link О нас
							+e.item
								+e.A(href="#!").link Новости
							+e.item
								+e.A(href="#!").link Доставка
							+e.item
								+e.A(href="#!").link Оплата
							+e.item
								+e.A(href="#!").link Оптовые цены
							+e.item
								+e.A(href="#!").link Контакты
						+e.UL.list
							+e.item
								+e.A(href="#!").link Корпоративные
							+e.item
								+e.A(href="#!").link Подарки
							+e.item
								+e.A(href="#!").link Сувениры по тематике
							+e.item
								+e.A(href="#!").link Лучшие
						+e.UL.list
							+e.item
								+e.A(href="#!").link Войти
							+e.item
								+e.A(href="#!").link Регистрация
							+e.item
								+e.A(href="#!").link Мои заказы
						+e.title
							+e.H3.title-text Продукция
						+e.UL.list
							+e.item
								+e.A(href="#!").link Футболки / Одежда
							+e.item
								+e.A(href="#!").link Вышивка
							+e.item
								+e.A(href="#!").link Кружки / Сувениры
							+e.item
								+e.A(href="#!").link Значки / Брелки
							+e.item
								+e.A(href="#!").link Фотокниги
							+e.item
								+e.A(href="#!").link Печать на холсте / Картины

					+e.rubric
						+e.BUTTON(type='button').rubric-open.js-rubric-open
							+e.SPAN Вся продукция подробно
							+icon('icon-arr-def', 'menu__rubric-arr')
						- var rubricClass = '_menu'
						include components/_rubric

					+e.A.version-link(href='#!')
						+e.SPAN Полная версия сайта

				+b.login.js-focus-fields
					+e.in
						+e.enter
							+e.text
								+e.SPAN Вход:
							+e.FORM(action='#!')
								+e.field._name
									+e.INPUT.input(type='name' name='' placeholder='Имя / Организация' required)
								+e.field._pass
									+e.INPUT.input(type='password' name='' placeholder='Пароль' required)
								+e.BUTTON(type='submit').btn
									+e.SPAN ВОЙТИ
						+e.registr
							+e.text
								+e.SPAN Регистрация:
							+e.FORM(action='#!')
								+e.field._name
									+e.INPUT.input(type='name' name='' placeholder='Имя / Организация' required)
								+e.field._email
									+e.INPUT.input(type='email' name='' placeholder='Почта' required)
								+e.field._pass
									+e.INPUT.input(type='password' name='' placeholder='Пароль' required)
								+e.field._pass
									+e.INPUT.input(type='password' name='' placeholder='Повторите пароль' required)
								+e.BUTTON(type='submit').btn
									+e.SPAN ЗАРЕГИСТРИРОВАТЬ

				+b.search.header__search.js-focus-fields
					+e.field
						+e.INPUT.input(type="text" name="" placeholder='Изготовление сувениров и подарков' required)
						+e.BUTTON.btn(type="submit")

				+e.cart
					+e.cart-field
						+e.cart-text._title Оформление заказа
					+e.cart-field
						+e.cart-text._border Номер вашего заказа:
							=  ' '
							+e.SPAN 44

		+b.hamburger.menu__hamburger.js-menu-hamburger
			+e.bar
	// end header

block content
	+b.MAIN.order
		+e.FORM(action='#!')
			+e.order__form.js-focus-fields
				+e.form-group
					+e.form-field._name._required
						+e.INPUT.input(type='text' name='' placeholder='Имя / Организация' required)
					+e.form-field._email._required
						+e.INPUT.input(type='email' name='' placeholder='Почта' required)

				+e.form-group
					+e.form-field._pass
						+e.INPUT.input(type='password' name='' placeholder='Пароль для регистрации' required)
					+e.form-field._pass
						+e.INPUT.input(type='password' name='' placeholder='Повторите пароль' required)
					+e.form-field._text
						+b.check.order__check
							+e.INPUT(type='checkbox' name='' id='no-reg')
							+e.LABEL(for='no-reg') Купить без регистрации -
								+e.SPAN.circle

				+e.form-group
					+e.form-field._tel._required
						+e.INPUT.input(type='tel' name='' placeholder='Телефон' required)

				+e.form-ask
					+e.SPAN Нужна ли Вам доставка товара?
					+e.form-ask-in
						+b.check.order__check
							+e.INPUT(type='radio' name='delivery-ask' id='delivery-ask-1')
							+e.LABEL(for='delivery-ask-1') Да
								+e.SPAN.circle

						+b.check.order__check
							+e.INPUT(type='radio' name='delivery-ask' id='delivery-ask-2' checked)
							+e.LABEL(for='delivery-ask-2') Нет
								+e.SPAN.circle
				+e.form-group
					+e.form-group-label Город
						+e.form-field._address
							+e.INPUT.input(type='text')
					+e.form-group-label Адрес доставки
						+e.form-field._address
							+e.TEXTAREA

			+e.comment
				+e.comment-title Комментарий
				+e.comment-descr Оставьте комментарий к заказу, наш менеджер свяжется с вами для уточнения оплаты и доставки.
				+e.comment-in
					+e.comment-message-wrap.js-focus-fields
						+e.TEXTAREA.comment-message
						+e.BUTTON.comment-extend.js-message-extend(type='button')
							+icon('icon-arr-double', 'order__comment-extend-icon')
					+b.send._basket._order
						+e.add
							+e.LABEL.add-btn(for='upload-1') Добавить файл
								+e.INPUT.add-input(id='upload-1' type='file' accept='image/*' name='' multiple)
						+e.files
							+e.item.decor._sm
								+e.IMG(src='img/content/file-1.jpg')
								+e.BUTTON.item-cancel(type='button')
									+icon('icon-close', 'send__item-cancel-icon')
								+b.decor__line
							+e.item.decor._sm
								+e.IMG(src='img/content/file-2.jpg')
								+e.BUTTON.item-cancel(type='button')
									+icon('icon-close', 'send__item-cancel-icon')
								+b.decor__line

							+e.message(style='display: none')
								+icon('icon-mark', 'send__message-icon')
								+e.message-text Письмо отправлено!

			+e.row
				+b.BUTTON.confirm-btn(type='submit')
					+e.SPAN Подтвердить

	include components/_benefits