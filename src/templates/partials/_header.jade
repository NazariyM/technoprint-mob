// begin header
+b.HEADER.header
	+e.bar.js-header-bar
		+e.bar-in
			+e.bar-btn
				+b.hamburger.header__hamburger
					+e.bar
			+e.bar-btn
				+icon('icon-user', 'header__bar-icon')
			+e.bar-btn
				+icon('icon-loupe', 'header__bar-icon')
			+e.bar-btn
				+e.cart-btn
					+icon('icon-cart', 'header__bar-icon')
					+e.DIV.cart-btn-total._quantity
						+e.SPAN 4 шт.
					+e.DIV.cart-btn-total
						+e.SPAN 0
						= ' '
						+icon('icon-ruble','header__cart-btn-val')

		+e.bar-content
			+b.menu
				+e.block
					+e.title
						+e.H3.title-text Меню
					+e.UL.list
						+e.item
							+e.A(href="#!").link Главная
						+e.item
							+e.A(href="#!").link Услуги фирмы
						+e.item
							+e.A(href="#!").link О нас
						+e.item
							+e.A(href="#!").link Новости
						+e.item
							+e.A(href="#!").link Доставка
						+e.item
							+e.A(href="#!").link Оплата
						+e.item
							+e.A(href="#!").link Оптовые цены
						+e.item
							+e.A(href="#!").link Контакты
					+e.UL.list
						+e.item
							+e.A(href="#!").link Корпоративные
						+e.item
							+e.A(href="#!").link Подарки
						+e.item
							+e.A(href="#!").link Сувениры по тематике
						+e.item
							+e.A(href="#!").link Лучшие
					+e.UL.list
						+e.item
							+e.A(href="#!").link Войти
						+e.item
							+e.A(href="#!").link Регистрация
						+e.item
							+e.A(href="#!").link Мои заказы
					+e.title
						+e.H3.title-text Продукция
					+e.UL.list
						+e.item
							+e.A(href="#!").link Футболки / Одежда
						+e.item
							+e.A(href="#!").link Вышивка
						+e.item
							+e.A(href="#!").link Кружки / Сувениры
						+e.item
							+e.A(href="#!").link Значки / Брелки
						+e.item
							+e.A(href="#!").link Фотокниги
						+e.item
							+e.A(href="#!").link Печать на холсте / Картины

				+e.rubric
					+e.BUTTON(type='button').rubric-open.js-rubric-open
						+e.SPAN Вся продукция подробно
						+icon('icon-arr-def', 'menu__rubric-arr')
					- var rubricClass = '_menu'
					include ../components/_rubric

				+e.A.version-link(href='#!')
					+e.SPAN Полная версия сайта

			+b.login.js-focus-fields
				+e.in
					+e.enter
						+e.text
							+e.SPAN Вход:
						+e.FORM(action='#!')
							+e.field._name
								+e.INPUT.input(type='name' name='' placeholder='Имя / Организация' required)
							+e.field._pass
								+e.INPUT.input(type='password' name='' placeholder='Пароль' required)
							+e.BUTTON(type='submit').btn
								+e.SPAN ВОЙТИ
					+e.registr
						+e.text
							+e.SPAN Регистрация:
						+e.FORM(action='#!')
							+e.field._name
								+e.INPUT.input(type='name' name='' placeholder='Имя / Организация' required)
							+e.field._email
								+e.INPUT.input(type='email' name='' placeholder='Почта' required)
							+e.field._pass
								+e.INPUT.input(type='password' name='' placeholder='Пароль' required)
							+e.field._pass
								+e.INPUT.input(type='password' name='' placeholder='Повторите пароль' required)
							+e.BUTTON(type='submit').btn
								+e.SPAN ЗАРЕГИСТРИРОВАТЬ

			+b.search.header__search.js-focus-fields
				+e.field
					+e.INPUT.input(type="text" name="" placeholder='Изготовление сувениров и подарков' required)
					+e.BUTTON.btn(type="submit")

			+e.cart
				+e.cart-field
					+e.cart-text._title Корзина заказов
				+e.cart-field
					+e.cart-text._border Количество товаров в корзине:
						=	' '
						+e.SPAN 0
				+e.cart-field
					+e.cart-text Мои оформленные заказы:
						=  ' '
						+e.SPAN 0

	+e.bottom
		+e.container.container
			+e.bottom-col
				+b.logo
					+e.A(href="#!").link
						+e.IMG.img(src="img/logo.svg" alt="Техно-принт")
			+e.bottom-col
				+b.NAV.nav.header__nav
					+e.UL.list.js-nav-list-scroll
						+e.LI.item
							+e.A.link(href='#!') Доставка
						+e.LI.item
							+e.A.link(href='#!') Оплата
						+e.LI.item
							+e.A.link(href='#!') Оптовые цены
						+e.LI.item
							+e.A.link(href='#!') Оплата
						+e.LI.item
							+e.A.link(href='#!') Услуги
						+e.LI.item
							+e.A.link(href='#!') Сувениры по тематике
						+e.LI.item
							+e.A.link(href='#!') О нас
						+e.LI.item
							+e.A.link(href='#!') Новости
						+e.LI.item
							+e.A.link(href='#!') Контакты

			+b.top-links.header__top-links
				+e.A(href="#!").link Услуги фирмы
				+e.A(href="#!").link Подарки
				+e.A(href="#!").link Корпоративные
				+e.A(href="#!").link Лучшие

			if breadCrumbs ? breadCrumbs : breadCrumbs = []
			+b.breadcrumbs(class= breadCrumbs ? breadCrumbs : '')
				+e.UL.list
					+e.LI.item
						+e.A.link(href='#!')
							+icon('icon-house', 'breadcrumbs__icon')
							+e.SPAN Главная
					mixin breadCrumbsItem(item)
						+e.LI.item(class= item.active)
							+e.A.link(href='#!')
								+e.SPAN= item.text
					each item in breadCrumbsList
						+breadCrumbsItem(item)

	+b.hamburger.menu__hamburger.js-menu-hamburger
		+e.bar
// end header
